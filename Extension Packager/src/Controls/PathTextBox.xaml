<UserControl
    x:Class="Extension_Packager.src.Controls.PathTextBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    x:Name="MyPathTextBox"
    x:Uid="MyPathTextBox"
    AutomationProperties.LandmarkType="Custom"
    AutomationProperties.AutomationControlType="Edit"
    DataContext="{Binding RelativeSource={RelativeSource Self}}">

    <Grid
        Style="{StaticResource BaseGridStyle}"
        Padding="0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="*" />
            <ColumnDefinition
                Width="auto" />
        </Grid.ColumnDefinitions>

        <TextBox
            x:Name="InputTextBox"
            Header="{Binding Path=Label}"
            Grid.Column="0"
            Text="{Binding Path=Value,Mode=TwoWay,ElementName=MyPathTextBox}"
            IsReadOnly="{Binding IsReadOnly}"
            PlaceholderText="{Binding PlaceholderText}"
            Style="{StaticResource TextboxWithHeaderStyle}" />

        <Button
            x:Uid="FileDialogButton"
            Grid.Column="1"
            Width="32"
            Height="32"
            Margin="12,24,0,0"
            Padding="4,2,8,8"
            HorizontalAlignment="Left"
            Content="{StaticResource SearchIconData}"
            Style="{StaticResource IconButtonStyle}"
            Command="{Binding OpenFilesDialogCommand}" />

    </Grid>
</UserControl>
